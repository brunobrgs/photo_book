<div class="clearfix">
  <ul class="filter-nav">
    <li class="active"><a data-id="all" href="">Todas</a></li>
    <% Category.all.each do |category| %>
      <li><a data-id="<%= category.link %>" href=""><%= category.name %></a></li>
    <% end %>
  </ul>
</div>

<ul class="thumbnails" id="thumbnails">
  <% Photo.all.shuffle.each do |photo| %>
    <li class="span3" data-id="<%= photo.id %>" data-type="<%= photo.link %>">
      <a href="<%= photo.image.url(:original) %>" class="thumbnail">
        <img src="<%= photo.image.url(:thumb) %>" alt="" />
        <span class="caption"><i class="icon-plus-sign"></i></span>
      </a>
    </li>
  <% end %>
</ul>
